{
  "name": "@fuep/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "FUEP Post-UTME Portal API (Express + TypeScript)",
  "engines": {
    "node": ">=20.13.1 <21"
  },
  "scripts": {
    "start:dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "clean": "rimraf dist",
    "db:migrate": "knex --knexfile knexfile.cjs migrate:latest",
    "db:rollback": "knex --knexfile knexfile.cjs migrate:rollback",
    "db:seed": "knex --knexfile knexfile.cjs seed:run"
  },
  "dependencies": {
    "@fuep/types": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "@types/nodemailer": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.13.0",
    "swagger-ui-express": "^5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.5.4"
  }
}
